{% macro pagination(items) %}
    {% if items.pagesNumber > 1 %}
        <ul class="pagination">
            {% if items.prev %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.prev)) }}">&laquo;</a>
                </li>
            {% else %}
                <li class="disabled">
                    <span>&laquo;</span>
                </li>
            {% endif %}
            {% if items.first %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.first)) }}">{{ items.first }}</a>
                </li>
                {% if items.spaceAfterFirst %}
                    <li class="disabled">
                        <span>...</span>
                    </li>
                {% endif %}
            {% endif %}
            {% for pageNo in items.pagesList %}
                <li{% if items.pageNo == pageNo %} class="active"{% endif %}>
                    <a href="{{ path(items.routeName, items.routeParams(pageNo)) }}">{{ pageNo }}</a>
                </li>
            {% endfor %}
            {% if items.last %}
                {% if items.spaceBeforeLast %}
                    <li class="disabled">
                        <span>...</span>
                    </li>
                {% endif %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.last)) }}">{{ items.last }}</a>
                </li>
            {% endif %}
            {% if items.next %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.next)) }}">&raquo;</a>
                </li>
            {% else %}
                <li class="disabled">
                    <span>&raquo;</span>
                </li>
            {% endif %}
        </ul>
    {% endif %}
{% endmacro %}