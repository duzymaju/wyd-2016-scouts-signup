{% macro pagination(items, params = {}) %}
    {% if items.pagesNumber > 1 %}
        <ul class="pagination">
            {% if items.prev %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.prev)|merge(params)) }}">
                        &laquo;
                    </a>
                </li>
            {% else %}
                <li class="disabled">
                    <span>&laquo;</span>
                </li>
            {% endif %}
            {% if items.first %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.first)|merge(params)) }}">
                        {{ items.first }}
                    </a>
                </li>
                {% if items.spaceAfterFirst %}
                    <li class="disabled">
                        <span>...</span>
                    </li>
                {% endif %}
            {% endif %}
            {% for pageNo in items.pagesList %}
                <li{% if items.pageNo == pageNo %} class="active"{% endif %}>
                    <a href="{{ path(items.routeName, items.routeParams(pageNo)|merge(params)) }}">
                        {{ pageNo }}
                    </a>
                </li>
            {% endfor %}
            {% if items.last %}
                {% if items.spaceBeforeLast %}
                    <li class="disabled">
                        <span>...</span>
                    </li>
                {% endif %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.last)|merge(params)) }}">
                        {{ items.last }}
                    </a>
                </li>
            {% endif %}
            {% if items.next %}
                <li>
                    <a href="{{ path(items.routeName, items.routeParams(items.next)|merge(params)) }}">
                        &raquo;
                    </a>
                </li>
            {% else %}
                <li class="disabled">
                    <span>&raquo;</span>
                </li>
            {% endif %}
        </ul>
    {% endif %}
{% endmacro %}

{% macro languagesList(person) %}
    {% if person.languages|length > 0 %}
        <ul>
            {% for language in person.languages %}
                <li>{{ language.slug|languagename }}</li>
            {% endfor %}
        </ul>
    {% else %}
        -
    {% endif %}
{% endmacro %}

{% macro permissionsList(person) %}
    {% if person.permissions|length > 0 %}
        <ul>
            {% for permission in person.permissions %}
                <li>{{ permission.id|permissionname }}</li>
            {% endfor %}
        </ul>
    {% else %}
        -
    {% endif %}
{% endmacro %}
