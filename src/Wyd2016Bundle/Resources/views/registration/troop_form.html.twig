{% extends 'Wyd2016Bundle:registration:template.html.twig' %}
{% import "Wyd2016Bundle:registration:_macro.html.twig" as macro %}

{% set pageTitle = 'troop.form.title'|trans %}

{% block body %}
    {{ macro.flashBagMessages('error', true) }}
    <h1>{{ 'troop.form.title'|trans }}</h1>
    {{ form_start(form, {'attr': {'class': 'registration-form registration-form-volunteer'}}) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group">
            {{ form_label(form.country) }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.country) }}
        </div>
        <div class="form-group" data-specific-locale="PL">
            {{ form_label(form.regionId) }}
            {{ form_widget(form.regionId, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.regionId) }}
        </div>
        <div class="form-group" data-specific-locale="PL">
            {{ form_label(form.districtId) }}
            {{ form_widget(form.districtId, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.districtId) }}
        </div>
        <div class="form-group">
            {{ form_label(form.serviceMainId) }}
            {{ form_widget(form.serviceMainId, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.serviceMainId) }}
        </div>
        <div class="form-group">
            {{ form_label(form.serviceExtraId) }}
            {{ form_widget(form.serviceExtraId, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.serviceExtraId) }}
        </div>
        <div class="form-group">
            {{ form_label(form.permissions) }}
            {{ form_widget(form.permissions, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.permissions) }}
        </div>
        <div class="form-group">
            {{ form_label(form.languages) }}
            {{ form_widget(form.languages, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.languages) }}
        </div>
        <div class="form-group">
            {{ form_label(form.profession) }}
            {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.profession) }}
        </div>
        <div class="row">
            {% for member in form.members %}
                <div class="col-sm-6">
                    <h2>{{ form.vars.data.leader is same as (member.vars.data) ? 'troop.form.leader'|trans : 'troop.form.member'|trans({'%no%': loop.index}) }}</h2>
                    <div class="form-group">
                        {{ form_label(member.firstName) }}
                        {{ form_widget(member.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.firstName) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(member.lastName) }}
                        {{ form_widget(member.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.lastName) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(member.address) }}
                        {{ form_widget(member.address, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.address) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(member.phone) }}
                        {{ form_widget(member.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.phone) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(member.email) }}
                        {{ form_widget(member.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.email) }}
                    </div>
                    <div class="form-group" data-specific-locale="">
                        {{ form_label(member.birthDate) }}
                        {{ form_widget(member.birthDate, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.birthDate) }}
                    </div>
                    <div class="form-group" data-specific-locale="PL">
                        {{ form_label(member.pesel) }}
                        {{ form_widget(member.pesel, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.pesel) }}
                    </div>
                    <div class="form-group" data-specific-locale="PL">
                        {{ form_label(member.gradeId) }}
                        {{ form_widget(member.gradeId, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(member.gradeId) }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="form-group">
            {{ form_label(form.dateFrom) }}
            {{ form_widget(form.dateFrom, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.dateFrom) }}
        </div>
        <div class="form-group">
            {{ form_label(form.dateTo) }}
            {{ form_widget(form.dateTo, {'attr': {'class': 'form-control'}}) }} <div class="info" title="???"></div>
            {{ form_errors(form.dateTo) }}
        </div>
        <div class="form-group">
            {{ form_label(form.comments) }}
            {{ form_widget(form.comments, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.comments) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.personalData) }}
            {{ form_label(form.personalData) }}
            {{ form_errors(form.personalData) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.rules) }}
            <label for="{{ form.rules.vars.id }}">{{ 'form.rules.acceptance'|trans }} <a href="{{ path('registration_rules') }}" target="_blank">{{ 'form.rules.name'|trans }}</a></label>
            {{ form_errors(form.rules) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
