{% extends 'Wyd2016Bundle:registration:_template.html.twig' %}

{% block content %}
    <h1>{{ 'index.title'|trans }}:</h1>
    <div class="btn-group-vertical btn-group-lg">
        {% if not limitsExceeded %}
            <a href="{{ path('registration_volunteer_form') }}" class="btn btn-default">{{ 'index.volunteer'|trans }}</a>
            <a href="{{ path('registration_troop_form') }}" class="btn btn-default">{{ 'index.troop'|trans }}</a>
        {% endif %}
        <a href="{{ path('registration_pilgrim_form') }}" class="btn btn-default">{{ 'index.pilgrim'|trans }}</a>
        <a href="{{ path('registration_group_form') }}" class="btn btn-default">{{ 'index.group'|trans }}</a>
    </div>
{% endblock %}
